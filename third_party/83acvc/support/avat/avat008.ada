-- AVAT008.ADA

-- CHECK WHETHER SHORT_FLOAT IS SUPPORTED.
-- IF SO, THIS UNIT WILL BE REPLACED.

-- PWB 01/15/87  CREATED ORIGINAL TEST.
-- TBN 03/20/87  CHANGED FORMAT.

WITH DATA_COLLECTION; USE DATA_COLLECTION;

PROCEDURE AVAT008 IS
     X : FLOAT;
     TESTED : THINGS_TO_SUPPORT := SHORT_FLO;
     LINE1 : CONSTANT STRING := "     SHORT_FLOAT IS NOT SUPPORTED.";
     LINE2 : CONSTANT STRING := "          THIS INDICATES THAT THE " &
                                "FOLLOWING TESTS ARE INAPPLICABLE:";
     LINE3 : CONSTANT STRING := "               B86001T  C35702A  " &
                                "C35713B  C45423B  C86006H";
BEGIN
     FEATURE (TESTED) := (3, ((LINE1'LENGTH, LINE1),
                              (LINE2'LENGTH, LINE2),
                              (LINE3'LENGTH, LINE3)));
END AVAT008;
