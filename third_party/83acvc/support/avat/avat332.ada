-- AVAT332.ADA

-- CHECK WHETHER THE INSTANTIATION OF DIRECT_IO WITH UNCONSTRAINED
-- ARRAY TYPES IS SUPPORTED.
-- IF SO, THIS UNIT WILL REPLACE THE PREVIOUSLY COMPILED AVAT331.

-- TBN 03/26/87
-- PWB 08/20/87  RENUMBERED.

WITH DATA_COLLECTION; USE DATA_COLLECTION;
WITH DIRECT_IO;

PROCEDURE AVAT331 IS
     SUBTYPE INT IS INTEGER RANGE 1 .. 10;
     TYPE ARR IS ARRAY (INT RANGE <>) OF BOOLEAN;
     PACKAGE DIR_ARR IS NEW DIRECT_IO (ARR);

     TESTED : THINGS_TO_SUPPORT := DIR_UNCONSTR_ARRAY;
     LINE1 : CONSTANT STRING := "     INSTANTIATION OF DIRECT_IO " &
                                "WITH UNCONSTRAINED ARRAY TYPES IS";
     LINE2 : CONSTANT STRING := "     SUPPORTED.";
BEGIN
     FEATURE (TESTED) := (2, ((LINE1'LENGTH, LINE1),
                              (LINE2'LENGTH, LINE2)));
END AVAT331;
