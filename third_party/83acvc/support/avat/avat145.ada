-- AVAT145.ADA

-- CHECK WHETHER A 'SMALL REPRESENTATION CLAUSE IS ACCEPTED.
-- IF SO, THIS UNIT WILL BE REPLACED.

--     PWB 01/15/87
--     TBN 03/25/87
--     DHH 11/18/87  ENTERED TEST NAMES AND SET OUTPUT.
--     RJW 07/18/89  ADDED REFERENCE TO ARBITRARY SMALL CLAUSE.

WITH DATA_COLLECTION; USE DATA_COLLECTION;

PROCEDURE AVAT145 IS

     TYPE FIXED IS DELTA 0.25 RANGE -1.0 .. 1.0;

     TESTED : THINGS_TO_SUPPORT := ARBITRARY_SMALL_CLAUSE;
     LINE0 : CONSTANT STRING := "     NON-BINARY/DECIMAL 'SMALL " &
                                "CLAUSE IS NOT ACCEPTED.";
     LINE1 : CONSTANT STRING := "          THIS INDICATES THAT THE " &
                                "FOLLOWING TESTS ARE INAPPLICABLE:";
     LINE2 : CONSTANT STRING := "               C45536A  C46013B  " &
                                "C46031B  C46033B  C46034B";
BEGIN
     FEATURE (TESTED) := (3, ((LINE0'LENGTH, LINE0),
                              (LINE1'LENGTH, LINE1),
                              (LINE2'LENGTH, LINE2)));
END AVAT145;
