-- AVAT007.TST

-- '$'NAME IS A PRE-DEFINED INTEGER TYPE OTHER THAN INTEGER,
-- SHORT_INTEGER, OR LONG_INTEGER.  IF THERE IS A PRE-DEFINED INTEGER
-- TYPE, SUCH AS SHORT_SHORT_INTEGER OR LONG_LONG_INTEGER THEN THIS
-- UNIT WILL REPLACE THE PREVIOUSLY COMPILED AVAT006.

-- REPLACE THE MACRO SYMBOL '$'NAME WITH THE NAME OF A PREDEFINED
-- INTEGER TYPE OTHER THAN INTEGER, SHORT_INTEGER, OR LONG_INTEGER.
-- IF THERE IS MORE THAN ONE SUCH TYPE, THEN FOR EACH, INSERT A
-- VARIABLE DECLARATION SIMILAR TO THE DECLARATION OF X1, AND MAKE
-- APPROPRIATE SUBSTITUTIONS IN LINE2, LINE3, LINE4, AND LINE5.  IF
-- THERE IS NO SUCH PREDEFINED INTEGER TYPE, MAKE NO SUBSTITUTIONS.

-- CHECK WHETHER OTHER PREDEFINED INTEGER TYPES ARE SUPPORTED.

-- PWB 01/15/87  CREATED ORIGINAL TEST.
-- TBN 03/20/87  CHANGED FORMAT.

WITH DATA_COLLECTION; USE DATA_COLLECTION;

PROCEDURE AVAT006 IS
     X1 : $NAME;
     TESTED : THINGS_TO_SUPPORT := OTHER_INT;
     LINE1 : CONSTANT STRING := "     THE FOLLOWING IS A LIST OF ALL " &
                                "THE OTHER PREDEFINED INTEGER";
     LINE2 : CONSTANT STRING := "     TYPE(S):";
     LINE3 : CONSTANT STRING := "          $NAME";
     LINE4 : CONSTANT STRING := "          THE RANGE IS " &
                              $NAME'IMAGE($NAME'FIRST) &
                              " .. " &
                              $NAME'IMAGE($NAME'LAST);

     -- IF THERE ARE OTHER PREDEFINED TYPES, INCLUDE THEM IN LINES 5 & 6
     -- THRU WHATEVER.

     LINE5 : CONSTANT STRING := "";
     LINE6 : CONSTANT STRING := "";
BEGIN
     FEATURE (TESTED) := (4, ((LINE1'LENGTH, LINE1),
                              (LINE2'LENGTH, LINE2),
                              (LINE3'LENGTH, LINE3),
                              (LINE4'LENGTH, LINE4)));
END AVAT006;
