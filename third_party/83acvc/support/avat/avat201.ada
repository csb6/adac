-- AVAT201.ADA

-- COMMENT HEADER FOR ENUMERATION REPRESENTATION CLAUSES.

-- THIS PROGRAM CHECKS WHETHER A REPRESENTATION CLAUSE SPECIFYING
-- VALUES OTHER THAN (FALSE => 0, TRUE => 1) FOR A BOOLEAN TYPE IS
-- ACCEPTED.

-- PWB 08/18/87  CREATED ORIGINAL FILE.
-- RJW 07/18/89  REVISED FOR ACVC 1.11. THIS VERSION ONLY CHECKS
--               NONDEFAULT REPRESENTATIONS FOR BOOLEAN TYPES.

WITH DATA_COLLECTION; USE DATA_COLLECTION;

PROCEDURE AVAT201 IS
     TESTED : THINGS_TO_SUPPORT := ENUM_REP_HEADER;
     LINE1 : CONSTANT STRING := "====== NONDEFAULT ENUMERATION " &
                                "REPRESENTATION CLAUSES ======";
BEGIN
     FEATURE (TESTED) := (1, (1 => (LINE1'LENGTH, LINE1)));
END AVAT201;
