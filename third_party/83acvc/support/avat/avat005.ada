-- AVAT005.ADA

-- CHECK WHETHER LONG_INTEGER IS SUPPORTED.
-- IF SO, THIS UNIT WILL REPLACE THE PREVIOUSLY COMPILED AVAT004.

-- PWB 01/15/87  CREATED ORIGINAL TEST.
-- TBN 03/20/87  CHANGED FORMAT.

WITH DATA_COLLECTION; USE DATA_COLLECTION;

PROCEDURE AVAT004 IS
     X : LONG_INTEGER;
     TESTED : THINGS_TO_SUPPORT := LONG_INT;
     LINE1 : CONSTANT STRING := "     LONG_INTEGER IS SUPPORTED.";
     LINE2 : CONSTANT STRING := "          THE RANGE IS " &
                                LONG_INTEGER'IMAGE(LONG_INTEGER'FIRST) &
                                " .. " &
                                LONG_INTEGER'IMAGE(LONG_INTEGER'LAST);
BEGIN
     FEATURE (TESTED) := (2, ((LINE1'LENGTH, LINE1),
                              (LINE2'LENGTH, LINE2)));
END AVAT004;
