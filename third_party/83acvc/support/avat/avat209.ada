-- AVAT209.ADA

-- CHECK WHETHER A REPRESENTATION CLAUSE SPECIFYING VALUES OTHER THAN
-- (FALSE => 0, TRUE => 1) FOR A BOOLEAN TYPE IS ACCEPTED.
-- IF SO, THIS UNIT WILL REPLACE THE PREVIOUSLY COMPILED AVAT208.

--     PWB 08/18/87  CREATED ORIGINAL TEST.
--     DHH 11/18/87  ENTERED TEST NAMES AND SET OUTPUT.

WITH DATA_COLLECTION; USE DATA_COLLECTION;

PROCEDURE AVAT208 IS

     TYPE BOOL IS NEW BOOLEAN;
     FOR BOOL USE (FALSE => 2, TRUE => 3);

     TESTED : THINGS_TO_SUPPORT := NON_DEFAULT_BOOLEAN;
     LINE1 : CONSTANT STRING := "     NONDEFAULT ENUM REP CLAUSE " &
                                "FOR BOOLEAN TYPE IS ACCEPTED.";
BEGIN
     FEATURE (TESTED) := (1, (1 => (LINE1'LENGTH, LINE1)));
END AVAT208;
