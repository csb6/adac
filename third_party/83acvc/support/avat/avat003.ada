-- AVAT003.ADA

-- CHECK WHETHER SHORT_INTEGER IS SUPPORTED.
-- IF SO, THIS UNIT WILL REPLACE THE PREVIOUSLY COMPILED AVAT002.

-- PWB 01/15/87  CREATED ORIGINAL TEST.
-- TBN 03/20/87  CHANGED FORMAT.

WITH DATA_COLLECTION; USE DATA_COLLECTION;

PROCEDURE AVAT002 IS
     X : SHORT_INTEGER;
     TESTED : THINGS_TO_SUPPORT := SHORT_INT;
     LINE1 : CONSTANT STRING := "     SHORT_INTEGER IS SUPPORTED.";
     LINE2 : CONSTANT STRING := "          THE RANGE IS " &
                              SHORT_INTEGER'IMAGE(SHORT_INTEGER'FIRST) &
                              " .. " &
                              SHORT_INTEGER'IMAGE(SHORT_INTEGER'LAST);
BEGIN
     FEATURE (TESTED) := (2, ((LINE1'LENGTH, LINE1),
                              (LINE2'LENGTH, LINE2)));
END AVAT002;
