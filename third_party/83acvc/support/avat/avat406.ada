-- AVAT406.ADA

-- LIST VALUES OF TICK, PRIORITY'FIRST, AND PRIORITY'LAST
-- AS DEFINED IN PACKAGE SYSTEM.

-- PWB 08/18/87  CREATED ORIGINAL TEST.

WITH DATA_COLLECTION; USE DATA_COLLECTION;
WITH SYSTEM; USE SYSTEM;
WITH TEXT_IO;

PROCEDURE AVAT406 IS

     PACKAGE FLT_IO IS NEW TEXT_IO.FLOAT_IO (FLOAT);
     TESTED : THINGS_TO_SUPPORT := OTHER_SYSTEM_VALUES;

     TICK_LABEL : CONSTANT STRING := "          SYSTEM.TICK =";
     LABEL_LEN : NATURAL := TICK_LABEL'LENGTH;

     LINE1 : CONSTANT STRING := "     OTHER VALUES DEFINED IN SYSTEM:";
     LINE2 : CONSTANT STRING := "          PRIORITY'FIRST =" &
                                INTEGER'IMAGE (PRIORITY'FIRST);
     LINE3 : CONSTANT STRING := "          PRIORITY'LAST =" &
                                INTEGER'IMAGE (PRIORITY'LAST);

     LINE4 : STRING (1 .. LABEL_LEN + 6 + FLOAT'DIGITS);

BEGIN
     LINE4 (1 .. LABEL_LEN) := TICK_LABEL;
     FLT_IO.PUT ( LINE4 (1 + LABEL_LEN .. LINE4'LENGTH), TICK);

     FEATURE (TESTED) := (4, ((LINE1'LENGTH, LINE1),
                              (LINE2'LENGTH, LINE2),
                              (LINE3'LENGTH, LINE3),
                              (LINE4'LENGTH, LINE4)));
END AVAT406;
