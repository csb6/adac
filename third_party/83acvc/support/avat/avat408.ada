-- AVAT408.ADA

-- LIST VALUES OF FLOAT ATTRIBUTES.

-- PWB 08/18/87  CREATED ORIGINAL TEST.

WITH DATA_COLLECTION; USE DATA_COLLECTION;
WITH SYSTEM; USE SYSTEM;
WITH TEXT_IO;

PROCEDURE AVAT408 IS

     TESTED : THINGS_TO_SUPPORT := FLOAT_VALUES;

     PACKAGE FLT_IO IS NEW TEXT_IO.FLOAT_IO (FLOAT);

     FIRST_LABEL : CONSTANT STRING := "          FLOAT'FIRST = ";
     FIRST_LABEL_LEN : NATURAL := FIRST_LABEL'LENGTH;

     LAST_LABEL : CONSTANT STRING := "          FLOAT'LAST =";
     LAST_LABEL_LEN : NATURAL := LAST_LABEL'LENGTH;

     LINE1 : CONSTANT STRING := "     ATTRIBUTE VALUES FOR TYPE FLOAT:";

     LINE2 : STRING (1 .. FIRST_LABEL_LEN + 9 + FLOAT'DIGITS);
     LINE3 : STRING (1 .. LAST_LABEL_LEN + 9 + FLOAT'DIGITS);

     LINE4 : CONSTANT STRING := "          FLOAT'DIGITS =" &
                                INTEGER'IMAGE (FLOAT'DIGITS);

BEGIN
     LINE2 (1 .. FIRST_LABEL_LEN) := FIRST_LABEL;
     LINE3 (1 .. LAST_LABEL_LEN) := LAST_LABEL;
     FLT_IO.PUT ( LINE2( FIRST_LABEL_LEN + 1 .. LINE2'LENGTH),
                  FLOAT'FIRST, EXP => 4 );

     FLT_IO.PUT ( LINE3( LAST_LABEL_LEN + 1 .. LINE3'LENGTH),
                  FLOAT'LAST, EXP => 4 );

     FEATURE (TESTED) := (4, ((LINE1'LENGTH, LINE1),
                              (LINE2'LENGTH, LINE2),
                              (LINE3'LENGTH, LINE3),
                              (LINE4'LENGTH, LINE4)));
END AVAT408;
