-- AVAT148.ADA

-- CHECK WHETHER NON-DECIMAL, NON-BINARY 'SMALL REPRESENTATION CLAUSE
-- IS ACCEPTED. IF SO, THIS UNIT WILL REPLACE THE PREVIOUSLY COMPILED
-- AVAT145.

-- PWB 08/17/87  ADAPTED FROM A SIMILAR TEST.
-- DHH 11/17/87  ENTERED TEST NAMES AND SET OUTPUT.
-- RJW 07/18/89  ADDED REFERENCE TO NON-BINARY, NON-DECIMAL SMALL.

WITH DATA_COLLECTION; USE DATA_COLLECTION;
WITH SYSTEM;

PROCEDURE AVAT145 IS

     TYPE FIXED IS DELTA 0.25 RANGE -1.0 .. 1.0;
     FOR FIXED'SMALL USE 0.135;

     TESTED : THINGS_TO_SUPPORT := ARBITRARY_SMALL_CLAUSE;
     LINE1 : CONSTANT STRING := "     NON-DECIMAL, NON-BINARY 'SMALL " &
                                "CLAUSE IS ACCEPTED.";
BEGIN
     FEATURE (TESTED) := (1, (1 => (LINE1'LENGTH, LINE1)));
END AVAT145;
