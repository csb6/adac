-- A39005G.DEP

-- OBJECTIVE:
--     CHECK THAT A RECORD REPRESENTATION CLAUSE CAN BE GIVEN BETWEEN
--     TWO TYPE DECLARATIONS.

-- APPLICABILITY CRITERIA:
--     THIS TEST IS APPLICABLE TO IMPLEMENTATIONS WHICH SUPPORT
--     RECORD REPRESENTATION CLAUSES.
--
--     IF RECORD REPRESENTATION CLAUSES ARE NOT SUPPORTED, THEN THE
--     REPRESENTATION CLAUSE FOR TYPE STATUS_WORD MUST BE REJECTED.

-- HISTORY:
--     TBN  08/19/86  CREATED ORIGINAL TEST.
--     BCB  12/28/87  MODIFIED HEADER.
--     GMT  09/01/88  CHANGED COMPONENT TO INTEGER TYPE AND
--                    MODIFIED THE COMPONENT CLAUSE.

WITH REPORT; USE REPORT;
PROCEDURE A39005G IS

     TYPE STATE IS (A, M, W, P);
     TYPE STATUS_WORD IS
          RECORD
               MACHINE_STATE : INTEGER;
          END RECORD;

     FOR STATUS_WORD USE
          RECORD
               MACHINE_STATE AT 0 RANGE 0 .. INTEGER'SIZE - 1;
          END RECORD;                                  -- N/A => ERROR.

     TYPE NEW_COLOR IS (ORANGE, BLUE);

BEGIN
     TEST ("A39005G", "CHECK THAT A RECORD REPRESENTATION CLAUSE CAN " &
                      "BE GIVEN BETWEEN TWO TYPE DECLARATIONS");
     RESULT;
END A39005G;
