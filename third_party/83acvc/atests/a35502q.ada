-- A35502Q.ADA

-- CHECK THAT THE ATTRIBUTES WIDTH, POS, VAL, SUCC, PRED, IMAGE, VALUE,
-- FIRST, AND LAST YIELD THE CORRECT TYPE WHEN THE PREFIX IS AN 
-- ENUMERATION TYPE OTHER THAN A BOOLEAN OR CHARACTER TYPE.

-- RJW 6/13/86

WITH REPORT; USE REPORT;
PROCEDURE A35502Q IS

     BEGIN
          TEST ( "A35502Q", "CHECK THAT THE ATTRIBUTES WIDTH, POS, " &
                            "VAL, SUCC, PRED, IMAGE, VALUE, FIRST, " &
                            "AND LAST YIELD THE CORRECT TYPE WHEN " &
                            "THE PREFIX IS AN ENUMERATION TYPE " &
                            "OTHER THAN A BOOLEAN OR CHARACTER TYPE" );

     DECLARE
          TYPE COLOR IS (RED, BLUE, GREEN);

          I1 : CONSTANT := COLOR'WIDTH;
          I2 : CONSTANT := COLOR'POS (RED);
          I3 : INTEGER  := I1 + I2;
     
          C1 : CONSTANT COLOR := COLOR'VAL (1);
          C2 : CONSTANT COLOR := COLOR'SUCC (BLUE);
          C3 : CONSTANT COLOR := COLOR'PRED (BLUE);
          C4 : CONSTANT COLOR := COLOR'VALUE ("BLUE");
          C5 : CONSTANT COLOR := COLOR'FIRST;
          C6 : CONSTANT COLOR := COLOR'LAST;

          S1 : CONSTANT STRING := COLOR'IMAGE (BLUE);
     BEGIN
          NULL;
     END;
    
     RESULT;
END A35502Q;
