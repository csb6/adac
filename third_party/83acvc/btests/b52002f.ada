-- B52002F.ADA

-- CHECK THAT THE LEFT SIDE OF AN ASSIGNMENT STMT MUST BE A VARIABLE.

-- LHS CANNOT BE A FUNCTION CALL RETURNING AN ACCESS VALUE.


-- DCB 1/31/80
-- JRK 10/30/80
-- RM  06/09/82  (REVISION FOR ADA-82)
-- RM  07/13/82  (SEPARATE "SYNTAX" FROM "SEMANTICS" (NON-CF SYNTAX))
-- VKG 01/07/83
-- SPS 03/21/83

PROCEDURE B52002F IS

     TYPE T IS ACCESS INTEGER;

     FUNCTION F (I : INTEGER) RETURN T IS
     BEGIN
          RETURN NEW INTEGER'(5);
     END F;

BEGIN

     F(2) := 3;         -- ERROR: FUNCTION RETURNING ACCESS VALUE ON
                        --        LEFT OF ASSIGNMENT STMT.

END B52002F ;
