-- B28001V.ADA

-- CHECK THAT PRAGMA LIST IS NOT ALLOWED AS THE ONLY VARIANT IN A
-- SEQUENCE OF VARIANTS IN A VARIANT PART.

-- TBN  9/11/86

PROCEDURE B28001V IS

     TYPE DEVICE IS (PRINTER, DISK, TERMINAL);

     TYPE PERIPHERAL (UNIT : DEVICE := TERMINAL) IS
          RECORD
               LINE : STRING (1 .. 80);
               CASE UNIT IS
                    PRAGMA LIST (ON);
               END CASE;                      -- ERROR: MISSING VARIANT.
          END RECORD;

BEGIN
     NULL;
END B28001V;
