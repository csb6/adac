-- B83030D.ADA

-- OBJECTIVE:
--     CHECK THAT IF A SUBPROGRAM DECLARED OUTSIDE A GENERIC UNIT
--     IS HIDDEN, A USE OF THE COMMON IDENTIFIER, WITHIN THE
--     GENERIC SUBPROGRAM, WHICH WOULD BE LEGAL TO THE OUTER
--     DECLARATION MUST BE REJECTED IF IT IS ILLEGAL AS A REFERENCE TO
--     THE GENERIC SUBPROGRAM.  THIS TEST CHECKS THE CASE IN WHICH THE
--     GENERIC SUBPROGRAM BODY COMPILED AS A SUBUNIT IN THE SAME
--     COMPILATION.

-- HISTORY:
--     RJW 11/06/88  CREATED ORIGINAL TEST.

PACKAGE B83030D_DECL1 IS

     GENERIC
          A : INTEGER;
     PROCEDURE B83030D_PROC1 (X, Y, Z : INTEGER);

     GENERIC
     FUNCTION B83030D_PROC2 (F : FLOAT) RETURN FLOAT;

     GENERIC
          TYPE T IS PRIVATE;
     PROCEDURE B83030D_FUNC3 (B : BOOLEAN);

     GENERIC
          WITH PROCEDURE P (X, Y : INTEGER);
     FUNCTION B83030D_FUNC4 RETURN BOOLEAN;
END B83030D_DECL1;

WITH B83030D_DECL1; USE B83030D_DECL1;
PACKAGE B83030D_DECL2 IS

     GENERIC
     PROCEDURE B83030D_PROC1;

     GENERIC
          TYPE T IS (<>);
     PROCEDURE B83030D_PROC2 (X : T);

     GENERIC
     FUNCTION B83030D_FUNC3 RETURN INTEGER;

     GENERIC
          TYPE T IS (<>);
     FUNCTION B83030D_FUNC4 RETURN T;
END B83030D_DECL2;

PACKAGE BODY B83030D_DECL1 IS
     PROCEDURE B83030D_PROC1 (X, Y, Z : INTEGER) IS
     BEGIN
          NULL;
     END B83030D_PROC1;

     FUNCTION B83030D_PROC2 (F : FLOAT) RETURN FLOAT IS
     BEGIN
          RETURN 1.0;
     END B83030D_PROC2;

     PROCEDURE B83030D_FUNC3 (B : BOOLEAN) IS
     BEGIN
          NULL;
     END B83030D_FUNC3;

     FUNCTION B83030D_FUNC4 RETURN BOOLEAN IS
     BEGIN
          RETURN TRUE;
     END B83030D_FUNC4;

END B83030D_DECL1;

WITH B83030D_DECL1; USE B83030D_DECL1;
PACKAGE BODY B83030D_DECL2 IS
     PROCEDURE B83030D_PROC1 IS SEPARATE;
     PROCEDURE B83030D_PROC2 (X : T) IS SEPARATE;
     FUNCTION B83030D_FUNC3 RETURN INTEGER IS SEPARATE;
     FUNCTION B83030D_FUNC4 RETURN T IS SEPARATE;
END B83030D_DECL2;

SEPARATE (B83030D_DECL2)
PROCEDURE B83030D_PROC1 IS
     A : INTEGER := 2;
     PROCEDURE PROC1 IS NEW B83030D_PROC1 (A);             -- ERROR:
BEGIN
     NULL;
END B83030D_PROC1;

SEPARATE (B83030D_DECL2)
PROCEDURE B83030D_PROC2 (X : T) IS
     FUNCTION PROC2 IS NEW B83030D_PROC2;                  -- ERROR:
BEGIN
     NULL;
END B83030D_PROC2;

SEPARATE (B83030D_DECL2)
FUNCTION B83030D_FUNC3 RETURN INTEGER IS
     PROCEDURE FUNC3 IS NEW B83030D_FUNC3 (INTEGER);       -- ERROR:
BEGIN
     RETURN 3;
END B83030D_FUNC3;

SEPARATE (B83030D_DECL2)
FUNCTION B83030D_FUNC4 RETURN T IS
     PROCEDURE P (X : INTEGER) IS
     BEGIN
          NULL;
     END;

     FUNCTION FUNC4 IS NEW B83030D_FUNC4 (P);             -- ERROR:
BEGIN
     RETURN T'FIRST;
END B83030D_FUNC4;

WITH B83030D_DECL1, B83030D_DECL2; USE B83030D_DECL1, B83030D_DECL2;
PROCEDURE B83030D IS
BEGIN
     NULL;
END B83030D;
