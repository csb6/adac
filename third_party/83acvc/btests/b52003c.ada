-- B52003C.ADA

-- CHECK THAT MULTIPLE ASSIGNMENTS ARE NOT PERMITTED
--    WITHIN A SINGLE ASSIGNMENT STATEMENT.

-- DCB 2/1/80
-- SPS 03/21/83
-- RJK 9/13/83    SPLIT FROM B52003A

PROCEDURE B52003C IS

     I1, I2, I3, I4 : INTEGER;

BEGIN

     I4 := 2 + (I3 := 45);      -- ERROR: MULTIPLE ASSIGNMENT.

END B52003C;
