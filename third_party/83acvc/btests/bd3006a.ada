-- BD3006A.ADA

-- OBJECTIVE:
--     CHECK THAT IN AN ENUMERATION REPRESENTATION CLAUSE, THE NAME
--     OF THE ENUMERATION TYPE OR ONE OF ITS SUBTYPES CANNOT APPEAR
--     AS A CHOICE IN THE AGGREGATE OR IN ONE OF THE EXPRESSIONS.

-- HISTORY:
--     JKC 04/12/88  CREATED ORIGINAL TEST.

PROCEDURE BD3006A IS

     TYPE ENUM1 IS (A,B,C,D,E);
     TYPE ENUM2 IS (F,G,H,I,J);
     TYPE ENUM3 IS (K,L,M,N,O);
     TYPE ENUM4 IS (GOOD, BAD);
     TYPE ENUM5 IS (ME, YOU, THEM);
     TYPE ENUM6 IS ('A', 'B', 'C');
     TYPE ENUM7 IS (RED, GREEN);

     SUBTYPE E_SUB1 IS ENUM1 RANGE A..C;
     SUBTYPE E_SUB3 IS ENUM3 RANGE K..N;
     SUBTYPE E_SUB5 IS ENUM5;

     FOR ENUM1 USE (E_SUB1'FIRST=>0, B=>1, C=>2, D=>3, E=>4);  -- ERROR:
     FOR ENUM2 USE (F=>4, ENUM2'VAL(1)=>5, H=>6, I=>7, J=>8);  -- ERROR:
     FOR ENUM3 USE (K=>9, L=>10, M=>11, E_SUB3'SUCC(M)=>12, O=>13);
                                                               -- ERROR:
     FOR ENUM4 USE (ENUM4'PRED(BAD)=>15, BAD=>16);             -- ERROR:
     FOR ENUM5 USE (E_SUB5'WIDTH, 10, 15);                     -- ERROR:
     FOR ENUM6 USE ('A'=>0, 'B'=>ENUM6'POS('B'), 'C'=>2);      -- ERROR:
     FOR ENUM7 USE (0, ENUM7'SIZE);
BEGIN
     NULL;
END BD3006A;
