-- B28003A.ADA

-- OBJECTIVE:
--     CHECK THAT A DECLARATION MAY NOT BE USED IN PLACE OF AN ARGUMENT
--     FOR A PREDEFINED PRAGMA OR AN UNRECOGNIZED PRAGMA.

-- HISTORY:
--     TBN 02/24/86
--     DWC 10/28/87  MOVED BASIC DECLARATION BEFORE LATER DECLARATIONS.

WITH SYSTEM;
PRAGMA ELABORATE (MY_INTEGER : INTEGER);                    -- ERROR:

PROCEDURE B28003A IS

     MY_INTEGER : INTEGER;

     PRAGMA OPTIMIZE (PROCEDURE FUN);                       -- ERROR:
     PRAGMA PRIORITY (PACKAGE TWO IS END TWO);              -- ERROR:
     PRAGMA CONTROLLED (TASK T1);                           -- ERROR:
     PRAGMA SHARED (GENERIC PACKAGE P IS END P);            -- ERROR:

     PROCEDURE PROC1;

     PRAGMA INTERFACE (MY_EXC : EXCEPTION, PROC1);          -- ERROR:

     GENERIC
          TYPE ITEM IS PRIVATE;
     PACKAGE STACK IS
          LENGTH_ERROR : EXCEPTION;
     END STACK;

     PACKAGE BODY STACK IS
     END STACK;

     PRAGMA INLINE (PACKAGE STACK1 IS NEW STACK(INTEGER));  -- ERROR:

     PRAGMA PACK (MY_INT : INTEGER RENAMES MY_INTEGER);     -- ERROR:

     PACKAGE KEY_MANAGER IS
          TYPE KEY IS PRIVATE;
          PRAGMA SUPPRESS (NULL_KEY : CONSTANT KEY);        -- ERROR:
     PRIVATE
          TYPE KEY IS NEW NATURAL;
          NULL_KEY : CONSTANT KEY := 0;
     END;

     PROCEDURE PROC1 IS
     BEGIN
          NULL;
     END PROC1;

BEGIN

     PRAGMA LIST (ON : INTEGER);                            -- ERROR:
     PRAGMA PAGE (ONE : INTEGER);                           -- ERROR:
     PRAGMA PHIL_BRASHEAR (PHIL : INTEGER);                 -- ERROR:
     PRAGMA ROSA_WILLIAMS (ROSA : BOOLEAN);                 -- ERROR:
     PRAGMA THOMAS_NORRIS (THOMAS : INTEGER);               -- ERROR:
     NULL;

END B28003A;
