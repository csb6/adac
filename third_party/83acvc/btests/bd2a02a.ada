-- BD2A02A.ADA

-- OBJECTIVE:
--     CHECK THAT TWO SIZE SPECIFICATIONS, EVEN IF THE SAME, CANNOT BE
--     GIVEN FOR THE SAME ENUMERATION, INTEGER, FIXED-POINT, FLOATING-
--     POINT, ARRAY, RECORD, AND ACCESS TYPE.

-- HISTORY:
--     JKC 03/16/88  CREATED ORIGINAL TEST.

PROCEDURE BD2A02A IS

     TYPE BASIC_ENUM IS (A, B, C);
     FOR BASIC_ENUM'SIZE USE 4;
     FOR BASIC_ENUM'SIZE USE 4;                    -- ERROR:  DUPLICATE.

     SIZE1 : CONSTANT := 128;
     TYPE INTEGER_TYPE IS RANGE 1..10;
     FOR INTEGER_TYPE'SIZE USE 64;
     FOR INTEGER_TYPE'SIZE USE SIZE1;              -- ERROR:  DUPLICATE.

     TYPE FIXED_TYPE IS DELTA 0.25 RANGE 1.0..2.0;
     FOR FIXED_TYPE'SIZE USE 32;
     FOR FIXED_TYPE'SIZE USE INTEGER'SIZE;         -- ERROR:  DUPLICATE.

     SIZE2 : CONSTANT := 16;
     TYPE FLOAT_TYPE IS DIGITS 2;
     FOR FLOAT_TYPE'SIZE USE 32;
     FOR FLOAT_TYPE'SIZE USE SIZE2;                -- ERROR:  DUPLICATE.

     TYPE ARRAY_TYPE IS ARRAY (1..4) OF INTEGER;
     FOR ARRAY_TYPE'SIZE USE 128;
     FOR ARRAY_TYPE'SIZE USE 4*INTEGER'SIZE;       -- ERROR:  DUPLICATE.

     TYPE RECORD_TYPE IS
          RECORD
               UNIT1 : INTEGER := 1;
               UNIT2 : INTEGER := 2;
               UNIT3 : INTEGER := 3;
          END RECORD;
     FOR RECORD_TYPE'SIZE USE 256;
     FOR RECORD_TYPE'SIZE USE 6*INTEGER'SIZE;      -- ERROR:  DUPLICATE.

     TYPE ACCESS_TYPE IS ACCESS ARRAY_TYPE;
     FOR ACCESS_TYPE'SIZE USE 256;
     FOR ACCESS_TYPE'SIZE USE 6*INTEGER'SIZE;      -- ERROR:  DUPLICATE.

BEGIN
     NULL;
END BD2A02A;
