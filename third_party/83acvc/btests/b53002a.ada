-- B53002A.ADA

-- CHECK THAT ELSE CANNOT PRECEDE ELSIF IN AN IF STATEMENT.

-- CHECK WHEN NO ELSIF PRECEEDS THE ELSE.

-- DCB 3/6/80
-- JRK 2/2/83 SPLIT FROM B53002A.
-- SPS 3/3/83

PROCEDURE B53002A IS

     B1, B2 : BOOLEAN;
     I1, I2 : INTEGER;

BEGIN
     B1 := TRUE;
     B2 := FALSE;

     IF B1 AND B2 THEN
          I1 := 1;
     ELSE I1 := 2;
     ELSIF B1 THEN       -- ERROR: ELSE PRECEDES ELSIF.
          I2 := 9;
     END IF;

END B53002A;
