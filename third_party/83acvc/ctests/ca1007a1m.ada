-- CA1007A1M.ADA

-- CHECK THAT A NON-GENERIC PACKAGE SPECIFICATION CAN BE COMPILED
-- WITHOUT ITS BODY.

-- SEPARATE FILES ARE:
--    CA1007A0  A LIBRARY PACKAGE SPECIFICATION.
--    CA1007A1M THE MAIN PROCEDURE.

-- BHS 7/19/84

WITH REPORT, CA1007A0;
USE REPORT;

PROCEDURE CA1007A1M IS

BEGIN

     TEST ("CA1007A", "A NON-GENERIC PACKAGE SPECIFICATION " &
                      "CAN BE COMPILED WITHOUT ITS BODY");

     IF CA1007A0.I /= 1 THEN
          FAILED ("PACKAGE NOT INVOKED");
     END IF;

     RESULT;

END CA1007A1M;
