-- C24113S.DEP

-- OBJECTIVE:
--     CHECK THAT DECIMAL VALUES OF 'LARGE AND 'SMALL ARE REPRESENTED
--     EXACTLY FOR DIGITS = 23.

-- APPLICABILITY CRITERIA:
--     THIS TEST IS APPLICABLE TO IMPLEMENTATIONS WHICH
--     SUPPORT DIGITS = 23 AND ALLOW SOURCE LINES WITH 226 CHARACTERS.
--
--     IF DIGITS = 23 IS NOT SUPPORTED, THEN THE DECLARATION OF TYPE
--     F MUST BE REJECTED.
--
--     IF SOURCE LINES OF 226 OR MORE CHARACTERS ARE NOT ALLOWED, THEN
--     THE LINE FOLLOWING THE DECLARATION OF MIN_SMALL MUST BE REJECTED.

-- HISTORY:
--     JBG 11/10/80  CREATED ORIGINAL TEST.
--     JBG 10/29/82
--     JBG 10/12/86  INSERTED CODE TO GUARANTEE VALUES ARE REPRESENTED
--                   AT RUN TIME; REMOVED -B FROM NAME.
--     BCB 12/28/87  MODIFIED HEADER.

WITH REPORT;
PROCEDURE C24113S IS
     USE REPORT;
     TYPE F IS DIGITS 23;                              -- N/A => ERROR.

     LARGE : F :=      -- DECIMAL VALUE OF 'LARGE ON NEXT LINE
8343699359066055009355525932739425785411664801432225774503821476119657122284406498430300454912.0
;
     MIN_LARGE : F :=  -- NEGATIVE VALUE OF 'LARGE ON NEXT LINE
-8343699359066055009355525932739425785411664801432225774503821476119657122284406498430300454912.0
;
     SMALL : F :=      -- DECIMAL VALUE OF 'SMALL ON NEXT LINE
0.599254573400601385875948724973910600949122987365655464491155898094129059414271955134289292485025873080710885200821762513814443189749111194190370461927363702667615413142072989323601295286181311894324608147144317626953125E-94
;
     MIN_SMALL : F :=  -- NEGATIVE VALUE OF 'SMALL ON NEXT LINE
-0.599254573400601385875948724973910600949122987365655464491155898094129059414271955134289292485025873080710885200821762513814443189749111194190370461927363702667615413142072989323601295286181311894324608147144317626953125E-94
;                      -- N/A => ERROR (PRECEDING LINE).

BEGIN TEST ("C24113S", "CHECK THAT DECIMAL VALUES OF 'LARGE, -'LARGE, "&
                       "'SMALL, AND -'SMALL ARE REPRESENTED EXACTLY");

     IF LARGE /= 16#0.FFFFFFFFFFFFFFFFFFFC#E78
     THEN
          FAILED ("'LARGE NOT EXACT - COMPILE-TIME");
     END IF;

     IF NOT EQUAL (2,2) THEN      -- NEVER EXECUTED
           LARGE := F (IDENT_INT(3));
     END IF;

     IF LARGE /= 16#0.FFFFFFFFFFFFFFFFFFFC#E78
     THEN
          FAILED ("'LARGE NOT EXACT - RUN-TIME");
     END IF;

     IF MIN_LARGE /= -16#0.FFFFFFFFFFFFFFFFFFFC#E78
     THEN
          FAILED ("-'LARGE NOT EXACT - COMPILE-TIME");
     END IF;

     IF NOT EQUAL (2,2) THEN      -- NEVER EXECUTED
           MIN_LARGE := F (IDENT_INT(3));
     END IF;

     IF MIN_LARGE /= -16#0.FFFFFFFFFFFFFFFFFFFC#E78
     THEN
          FAILED ("-'LARGE NOT EXACT - RUN-TIME");
     END IF;

     IF SMALL /= 16#0.8#E-78
     THEN
          FAILED ("SMALL NOT EXACT - COMPILE-TIME");
     END IF;

     IF NOT EQUAL (2,2) THEN      -- NEVER EXECUTED
          SMALL := F(IDENT_INT(3));
     END IF;

     IF SMALL /= 16#0.8#E-78
     THEN
          FAILED ("SMALL NOT EXACT - RUN-TIME");
     END IF;

     IF MIN_SMALL /= -16#0.8#E-78
     THEN
          FAILED ("-'SMALL NOT EXACT - COMPILE-TIME");
     END IF;

     IF NOT EQUAL (2,2) THEN      -- NEVER EXECUTED
          MIN_SMALL := F(IDENT_INT(3));
     END IF;

     IF MIN_SMALL /= -16#0.8#E-78
     THEN
          FAILED ("-'SMALL NOT EXACT - RUN-TIME");
     END IF;

     RESULT;

END C24113S;
