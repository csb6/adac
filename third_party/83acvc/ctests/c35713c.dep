-- C35713C.DEP

-- OBJECTIVE:
--     CHECK THAT PREDEFINED LONG_FLOAT IS ITS OWN BASE TYPE.

-- APPLICABILITY CRITERIA:
--     THIS TEST IS APPLICABLE ONLY TO THOSE IMPLEMENTATIONS WHICH
--     SUPPORT LONG_FLOAT.

--     IF "LONG_FLOAT" IS NOT SUPPORTED, THEN THE DECLARATION OF
--     "CHECK_LONG" MUST BE REJECTED.

-- HISTORY:
--     BCB 07/07/88  CREATED ORIGINAL TEST.

WITH REPORT; USE REPORT;

PROCEDURE C35713C IS

     CHECK_LONG : LONG_FLOAT;                          -- N/A => ERROR.

BEGIN
     TEST ("C35713C", "CHECK THAT PREDEFINED LONG_FLOAT IS ITS OWN " &
                      "BASE TYPE");

     IF LONG_FLOAT'DIGITS /= LONG_FLOAT'BASE'DIGITS
          THEN FAILED ("LONG_FLOAT'DIGITS DOES NOT EQUAL " &
                       "LONG_FLOAT'BASE'DIGITS");
     END IF;

     IF LONG_FLOAT'MANTISSA /= LONG_FLOAT'BASE'MANTISSA
          THEN FAILED ("LONG_FLOAT'MANTISSA DOES NOT EQUAL " &
                       "LONG_FLOAT'BASE'MANTISSA");
     END IF;

     IF LONG_FLOAT'SIZE /= LONG_FLOAT'BASE'SIZE
          THEN FAILED ("LONG_FLOAT'SIZE DOES NOT EQUAL " &
                       "LONG_FLOAT'BASE'SIZE");
     END IF;

     IF LONG_FLOAT'MACHINE_RADIX /= LONG_FLOAT'BASE'MACHINE_RADIX
          THEN FAILED ("LONG_FLOAT'MACHINE_RADIX DOES NOT EQUAL " &
                       "LONG_FLOAT'BASE'MACHINE_RADIX");
     END IF;

     IF LONG_FLOAT'MACHINE_EMAX /= LONG_FLOAT'BASE'MACHINE_EMAX
          THEN FAILED ("LONG_FLOAT'MACHINE_RADIX DOES NOT EQUAL " &
                       "LONG_FLOAT'BASE'MACHINE_RADIX");
     END IF;

     IF LONG_FLOAT'MACHINE_EMIN /= LONG_FLOAT'BASE'MACHINE_EMIN
          THEN FAILED ("LONG_FLOAT'MACHINE_EMIN DOES NOT EQUAL " &
                       "LONG_FLOAT'BASE'MACHINE_EMIN");
     END IF;

     IF LONG_FLOAT'MACHINE_ROUNDS /= LONG_FLOAT'BASE'MACHINE_ROUNDS
          THEN FAILED ("LONG_FLOAT'MACHINE_ROUNDS DOES NOT EQUAL " &
                       "LONG_FLOAT'BASE'MACHINE_ROUNDS");
     END IF;

     IF LONG_FLOAT'MACHINE_OVERFLOWS /=
          LONG_FLOAT'BASE'MACHINE_OVERFLOWS THEN
          FAILED ("LONG_FLOAT'MACHINE_OVERFLOWS DOES NOT EQUAL " &
                  "LONG_FLOAT'BASE'MACHINE_OVERFLOWS");
     END IF;

     RESULT;
END C35713C;
