-- C24113X.DEP

-- OBJECTIVE:
--     CHECK THAT DECIMAL VALUES OF 'LARGE AND 'SMALL ARE REPRESENTED
--     EXACTLY FOR DIGITS = 28.

-- APPLICABILITY CRITERIA:
--     THIS TEST IS APPLICABLE TO IMPLEMENTATIONS WHICH
--     SUPPORT DIGITS = 28 AND ALLOW SOURCE LINES WITH 275 CHARACTERS.
--
--     IF DIGITS = 28 IS NOT SUPPORTED, THEN THE DECLARATION OF TYPE
--     F MUST BE REJECTED.
--
--     IF SOURCE LINES OF 275 OR MORE CHARACTERS ARE NOT ALLOWED, THEN
--     THE LINE FOLLOWING THE DECLARATION OF MIN_SMALL MUST BE REJECTED.

-- HISTORY:
--     JBG 11/10/80  CREATED ORIGINAL TEST.
--     JBG 10/29/82
--     JBG 10/12/86  INSERTED CODE TO GUARANTEE VALUES ARE REPRESENTED
--                   AT RUN TIME; REMOVED -B FROM NAME.
--     BCB 12/28/87  MODIFIED HEADER.

WITH REPORT;
PROCEDURE C24113X IS
     USE REPORT;
     TYPE F IS DIGITS 28;                              -- N/A => ERROR.

     LARGE : F :=      -- DECIMAL VALUE OF 'LARGE ON NEXT LINE
2462625387274654950767440006196810458266260374134667635728415732752800591868907198533333643818662290423847577452544.0
;
     MIN_LARGE : F :=  -- NEGATIVE VALUE OF 'LARGE ON NEXT LINE
-2462625387274654950767440006196810458266260374134667635728415732752800591868907198533333643818662290423847577452544.0
;
     SMALL : F :=      -- DECIMAL VALUE OF 'SMALL ON NEXT LINE
0.203035346985251937861921964466443483745889507976087646528484825699158135831143957914592594324462742898373167284620071667728165707395490136222456508614094382275097319978855605350612705653459504547276226174462456884110623777099820241875960391553235240280628204345703125E-114
;
     MIN_SMALL : F :=  -- NEGATIVE VALUE OF 'SMALL ON NEXT LINE
-0.203035346985251937861921964466443483745889507976087646528484825699158135831143957914592594324462742898373167284620071667728165707395490136222456508614094382275097319978855605350612705653459504547276226174462456884110623777099820241875960391553235240280628204345703125E-114
;                      -- N/A => ERROR (PRECEDING LINE).

BEGIN TEST ("C24113X", "CHECK THAT DECIMAL VALUES OF 'LARGE, -'LARGE, "&
                       "'SMALL, AND -'SMALL ARE REPRESENTED EXACTLY");

     IF LARGE /= 16#0.FFFFFFFFFFFFFFFFFFFFFFFE#E95
     THEN
          FAILED ("'LARGE NOT EXACT - COMPILE-TIME");
     END IF;

     IF NOT EQUAL (2,2) THEN      -- NEVER EXECUTED
           LARGE := F (IDENT_INT(3));
     END IF;

     IF LARGE /= 16#0.FFFFFFFFFFFFFFFFFFFFFFFE#E95
     THEN
          FAILED ("'LARGE NOT EXACT - RUN-TIME");
     END IF;

     IF MIN_LARGE /= -16#0.FFFFFFFFFFFFFFFFFFFFFFFE#E95
     THEN
          FAILED ("-'LARGE NOT EXACT - COMPILE-TIME");
     END IF;

     IF NOT EQUAL (2,2) THEN      -- NEVER EXECUTED
           MIN_LARGE := F (IDENT_INT(3));
     END IF;

     IF MIN_LARGE /= -16#0.FFFFFFFFFFFFFFFFFFFFFFFE#E95
     THEN
          FAILED ("-'LARGE NOT EXACT - RUN-TIME");
     END IF;

     IF SMALL /= 16#0.8#E-95
     THEN
          FAILED ("SMALL NOT EXACT - COMPILE-TIME");
     END IF;

     IF NOT EQUAL (2,2) THEN      -- NEVER EXECUTED
          SMALL := F(IDENT_INT(3));
     END IF;

     IF SMALL /= 16#0.8#E-95
     THEN
          FAILED ("SMALL NOT EXACT - RUN-TIME");
     END IF;

     IF MIN_SMALL /= -16#0.8#E-95
     THEN
          FAILED ("-'SMALL NOT EXACT - COMPILE-TIME");
     END IF;

     IF NOT EQUAL (2,2) THEN      -- NEVER EXECUTED
          MIN_SMALL := F(IDENT_INT(3));
     END IF;

     IF MIN_SMALL /= -16#0.8#E-95
     THEN
          FAILED ("-'SMALL NOT EXACT - RUN-TIME");
     END IF;

     RESULT;

END C24113X;
