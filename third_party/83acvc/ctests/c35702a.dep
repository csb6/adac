-- C35702A.DEP

-- OBJECTIVE:
--     CHECK THAT SHORT_FLOAT'DIGITS < FLOAT'DIGITS.

-- APPLICABILITY CRITERIA:
--     THIS TEST IS APPLICABLE TO IMPLEMENTATIONS WHICH SUPPORT
--     THE TYPE "SHORT_FLOAT".
--
--     IF THE TYPE "SHORT_FLOAT" IS NOT SUPPORTED, THEN THE
--     DECLARATION OF CHECK MUST BE REJECTED.

-- HISTORY:
--     BAW 09/05/80  CREATED ORIGINAL TEST.
--     SPS 02/18/83
--     BCB 01/04/88  MODIFIED HEADER.

WITH REPORT;
PROCEDURE C35702A IS

     USE REPORT;

     CHECK : SHORT_FLOAT;                              -- N/A => ERROR.

BEGIN
     TEST ("C35702A","CHECK IF FLOAT HAS MORE DIGITS THAN SHORT_FLOAT");

     IF SHORT_FLOAT'DIGITS >= FLOAT'DIGITS THEN
          FAILED ("FLOAT HAS NOT MORE PRECISION THAN SHORT_FLOAT");
     END IF;

     RESULT;

END C35702A;
