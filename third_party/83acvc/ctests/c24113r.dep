-- C24113R.DEP

-- OBJECTIVE:
--     CHECK THAT DECIMAL VALUES OF 'LARGE AND 'SMALL ARE REPRESENTED
--     EXACTLY FOR DIGITS = 22.

-- APPLICABILITY CRITERIA:
--     THIS TEST IS APPLICABLE TO IMPLEMENTATIONS WHICH
--     SUPPORT DIGITS = 22 AND ALLOW SOURCE LINES WITH 218 CHARACTERS.
--
--     IF DIGITS = 22 IS NOT SUPPORTED, THEN THE DECLARATION OF TYPE
--     F MUST BE REJECTED.
--
--     IF SOURCE LINES OF 218 OR MORE CHARACTERS ARE NOT ALLOWED, THEN
--     THE LINE FOLLOWING THE DECLARATION OF MIN_SMALL MUST BE REJECTED.

-- HISTORY:
--     JBG 11/10/80  CREATED ORIGINAL TEST.
--     JBG 10/29/82
--     JBG 10/12/86  INSERTED CODE TO GUARANTEE VALUES ARE REPRESENTED
--                   AT RUN TIME; REMOVED -B FROM NAME.
--     BCB 12/28/87  MODIFIED HEADER.

WITH REPORT;
PROCEDURE C24113R IS
     USE REPORT;
     TYPE F IS DIGITS 22;                              -- N/A => ERROR.

     LARGE : F :=      -- DECIMAL VALUE OF 'LARGE ON NEXT LINE
2037035976334486086268391768516043859771879059635762211374793175065536218618374498962898944.0
;
     MIN_LARGE : F :=  -- NEGATIVE VALUE OF 'LARGE ON NEXT LINE
-2037035976334486086268391768516043859771879059635762211374793175065536218618374498962898944.0
;
     SMALL : F :=      -- DECIMAL VALUE OF 'SMALL ON NEXT LINE
0.2454546732648863276547885977493137821487607756249724782555774558593552627360857928230048942018665976138591785782565939256583959305212359451403757412054481726126552732229930964269470905492198653519153594970703125E-90
;
     MIN_SMALL : F :=  -- NEGATIVE VALUE OF 'SMALL ON NEXT LINE
-0.2454546732648863276547885977493137821487607756249724782555774558593552627360857928230048942018665976138591785782565939256583959305212359451403757412054481726126552732229930964269470905492198653519153594970703125E-90
;                      -- N/A => ERROR (PRECEDING LINE).

BEGIN TEST ("C24113R", "CHECK THAT DECIMAL VALUES OF 'LARGE, -'LARGE, "&
                       "'SMALL, AND -'SMALL ARE REPRESENTED EXACTLY");

     IF LARGE /= 16#0.FFFFFFFFFFFFFFFFFFE#E75
     THEN
          FAILED ("'LARGE NOT EXACT - COMPILE-TIME");
     END IF;

     IF NOT EQUAL (2,2) THEN      -- NEVER EXECUTED
           LARGE := F (IDENT_INT(3));
     END IF;

     IF LARGE /= 16#0.FFFFFFFFFFFFFFFFFFE#E75
     THEN
          FAILED ("'LARGE NOT EXACT - RUN-TIME");
     END IF;

     IF MIN_LARGE /= -16#0.FFFFFFFFFFFFFFFFFFE#E75
     THEN
          FAILED ("-'LARGE NOT EXACT - COMPILE-TIME");
     END IF;

     IF NOT EQUAL (2,2) THEN      -- NEVER EXECUTED
           MIN_LARGE := F (IDENT_INT(3));
     END IF;

     IF MIN_LARGE /= -16#0.FFFFFFFFFFFFFFFFFFE#E75
     THEN
          FAILED ("-'LARGE NOT EXACT - RUN-TIME");
     END IF;

     IF SMALL /= 16#0.8#E-75
     THEN
          FAILED ("SMALL NOT EXACT - COMPILE-TIME");
     END IF;

     IF NOT EQUAL (2,2) THEN      -- NEVER EXECUTED
          SMALL := F(IDENT_INT(3));
     END IF;

     IF SMALL /= 16#0.8#E-75
     THEN
          FAILED ("SMALL NOT EXACT - RUN-TIME");
     END IF;

     IF MIN_SMALL /= -16#0.8#E-75
     THEN
          FAILED ("-'SMALL NOT EXACT - COMPILE-TIME");
     END IF;

     IF NOT EQUAL (2,2) THEN      -- NEVER EXECUTED
          MIN_SMALL := F(IDENT_INT(3));
     END IF;

     IF MIN_SMALL /= -16#0.8#E-75
     THEN
          FAILED ("-'SMALL NOT EXACT - RUN-TIME");
     END IF;

     RESULT;

END C24113R;
