-- C35707D.DEP

-- OBJECTIVE:
--     CHECK THAT LITERALS LIE IN CORRECT MODEL RANGE
--     FOR DIGITS = 8.

-- APPLICABILITY CRITERIA:
--     THIS TEST IS APPLICABLE TO IMPLEMENTATIONS WHICH
--     SUPPORT DIGITS = 8.
--
--     IF DIGITS = 8 IS NOT SUPPORTED, THEN THE DECLARATION OF
--     DN MUST BE REJECTED.

-- HISTORY:
--     BAW 09/80     CREATED ORIGINAL TEST.
--     JBG 10/29/82
--     JBG 10/12/86  ADD CODE TO ENSURE CHECK IS DONE AT RUN-TIME;
--                   REMOVE -B FROM NAME.
--     BCB 01/12/88  MODIFIED HEADER.

WITH REPORT;
PROCEDURE C35707D IS
     USE REPORT;
     TYPE DN IS DIGITS 8;                              -- N/A => ERROR.

BEGIN

     DECLARE
          X : DN := 0.2;
          Y : DN := 3#0.1#;   -- = ONE THIRD

     BEGIN
          TEST("C35707D","CHECK ALL LITERAL VALUES LIE IN THE " &
               "APPROPRIATE MODEL INTERVAL");

          IF X < 16#0.3333333# OR
             X > 16#0.3333334# OR
             Y < 16#0.5555555# OR
             Y > 16#0.5555556#
          THEN FAILED("NOT ALL LITERAL VALUES LIE IN THE " &
                      "APPROPRIATE INTERVAL - COMPILE-TIME");
          END IF;

          IF NOT EQUAL (2,2) THEN  -- NEVER EXECUTED
               X := 0.0;
               Y := 0.0;
          END IF;

          IF X < 16#0.3333333# OR
             X > 16#0.3333334# OR
             Y < 16#0.5555555# OR
             Y > 16#0.5555556#
          THEN FAILED("NOT ALL LITERAL VALUES LIE IN THE " &
                      "APPROPRIATE INTERVAL - RUN-TIME");
          END IF;

     END;

     RESULT;

END C35707D;
