-- C35404B.DEP

-- OBJECTIVE:
--     CHECK THAT PREDEFINED SHORT_INTEGER IS ITS OWN BASE TYPE.

-- APPLICABILITY CRITERIA:
--     THIS TEST IS APPLICABLE ONLY TO THOSE IMPLEMENTATIONS WHICH
--     SUPPORT SHORT_INTEGER.

--     IF "SHORT_INTEGER" IS NOT SUPPORTED, THEN THE DECLARATION OF
--     "CHECK_SHORT" MUST BE REJECTED.

-- HISTORY:
--     BCB 07/07/88  CREATED ORIGINAL TEST.

WITH REPORT; USE REPORT;

PROCEDURE C35404B IS

     CHECK_SHORT : SHORT_INTEGER;                      -- N/A => ERROR.

BEGIN
     TEST ("C35404B", "CHECK THAT PREDEFINED SHORT_INTEGER IS ITS " &
                      "OWN BASE TYPE");

     IF SHORT_INTEGER'FIRST /= SHORT_INTEGER'BASE'FIRST
          THEN FAILED ("SHORT_INTEGER'FIRST DOES NOT EQUAL " &
                       "SHORT_INTEGER'BASE'FIRST");
     END IF;

     IF SHORT_INTEGER'LAST /= SHORT_INTEGER'BASE'LAST
          THEN FAILED ("SHORT_INTEGER'LAST DOES NOT EQUAL " &
                       "SHORT_INTEGER'BASE'LAST");
     END IF;

     IF SHORT_INTEGER'SIZE /= SHORT_INTEGER'BASE'SIZE
          THEN FAILED ("SHORT_INTEGER'SIZE DOES NOT EQUAL " &
                       "SHORT_INTEGER'BASE'SIZE");
     END IF;

     IF SHORT_INTEGER'WIDTH /= SHORT_INTEGER'BASE'WIDTH
          THEN FAILED ("SHORT_INTEGER'WIDTH DOES NOT EQUAL " &
                       "SHORT_INTEGER'BASE'WIDTH");
     END IF;

     RESULT;
END C35404B;
