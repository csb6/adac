
-- C37409A.ADA

-- OBJECTIVE:
--     CHECK THAT THE ATTRIBUTE 'BASE IS DEFINED FOR RECORD TYPES
--     AND SUBTYPES.

-- HISTORY:
--     DHH 03/03/88 CREATED ORIGINAL TEST.

WITH REPORT; USE REPORT;
PROCEDURE C37409A IS
     SUBTYPE INT IS INTEGER RANGE 1 .. 10;

     TYPE T(A : INT := 1) IS
          RECORD
               I : INTEGER;
          END RECORD;
     SUBTYPE SS IS T(6);

     TYPE TA IS
          RECORD
               I : INTEGER;
          END RECORD;
     SUBTYPE TT IS TA;
BEGIN

     TEST("C37409A", "CHECK THAT THE ATTRIBUTE 'BASE IS DEFINED " &
                     "FOR RECORD TYPES AND SUBTYPES");

     IF SS'BASE'SIZE < SS'SIZE THEN
          FAILED("SUBTYPE SIZE GREATER THAN BASE SIZE - 1");
     END IF;

     IF TT'BASE'SIZE < TT'SIZE THEN
          FAILED("SUBTYPE SIZE GREATER THAN BASE SIZE - 2");
     END IF;

     IF T'BASE'SIZE < SS'SIZE THEN
          FAILED("SUBTYPE SIZE GREATER THAN BASE SIZE - 3");
     END IF;
     RESULT;
END C37409A;
