-- C35708I.DEP

-- OBJECTIVE:
--     CHECK THAT UNNORMALIZED MODEL NUMBERS ARE CORRECT
--     FOR DIGITS = 13.

-- APPLICABILITY CRITERIA:
--     THIS TEST IS APPLICABLE TO IMPLEMENTATIONS WHICH
--     SUPPORT DIGITS = 13.
--
--     IF DIGITS = 13 IS NOT SUPPORTED, THEN THE DECLARATION OF
--     DN MUST BE REJECTED.

-- HISTORY:
--     BAW 09/80     CREATED ORIGINAL TEST.
--     JBG 10/29/82
--     JBG 10/12/86  ADD CODE TO ENSURE CHECKS ARE DONE AT RUN-TIME;
--                   REMOVE -B FROM TEST NAME.
--     BCB 01/14/88  MODIFIED HEADER.

WITH REPORT;
PROCEDURE C35708I IS

     USE REPORT;
     TYPE DN IS DIGITS 13;                             -- N/A => ERROR.

BEGIN

     DECLARE
          X : DN := 16#0.0000000FFFFFFFFFFF8#E52;
          Y : DN := 16#0.00000000001#E-14;

     BEGIN TEST("C35708I","CHECK UNNORMALISED BASED NUMBERS, WHICH " &
                "ARE MODEL NUMBERS");

          IF X /= 16#0.FFFFFFFFFFF8#E45 OR
             Y /= 16#0.1#E-24 THEN
               FAILED("UNNORMALISED MODEL NUMBERS ARE NOT HANDLED " &
                      "CORRECTLY - COMPILE-TIME ");
          END IF;

          IF NOT EQUAL (2,2) THEN    -- NEVER EXECUTED
               X := 0.0;
               Y := DN(IDENT_INT(3));
          END IF;

          IF X /= 16#0.FFFFFFFFFFF8#E45 OR
             Y /= 16#0.1#E-24 THEN
               FAILED("UNNORMALISED MODEL NUMBERS ARE NOT HANDLED " &
                      "CORRECTLY - RUN-TIME ");
          END IF;

     END;

     RESULT;
END C35708I;
