-- C35708V.DEP

-- OBJECTIVE:
--     CHECK THAT UNNORMALIZED MODEL NUMBERS ARE CORRECT
--     FOR DIGITS = 26.

-- APPLICABILITY CRITERIA:
--     THIS TEST IS APPLICABLE TO IMPLEMENTATIONS WHICH
--     SUPPORT DIGITS = 26.
--
--     IF DIGITS = 26 IS NOT SUPPORTED, THEN THE DECLARATION OF
--     DN MUST BE REJECTED.

-- HISTORY:
--     BAW 09/80     CREATED ORIGINAL TEST.
--     JBG 10/29/82
--     JBG 10/12/86  ADD CODE TO ENSURE CHECKS ARE DONE AT RUN-TIME;
--                   REMOVE -B FROM TEST NAME.
--     BCB 01/14/88  MODIFIED HEADER.

WITH REPORT;
PROCEDURE C35708V IS

     USE REPORT;
     TYPE DN IS DIGITS 26;                             -- N/A => ERROR.

BEGIN

     DECLARE
          X : DN := 16#0.0000000FFFFFFFFFFFFFFFFFFFFFF#E95;
          Y : DN := 16#0.00000000002#E-25;

     BEGIN TEST("C35708V","CHECK UNNORMALISED BASED NUMBERS, WHICH " &
                "ARE MODEL NUMBERS");

          IF X /= 16#0.FFFFFFFFFFFFFFFFFFFFFF#E88 OR
             Y /= 16#0.2#E-35 THEN
               FAILED("UNNORMALISED MODEL NUMBERS ARE NOT HANDLED " &
                      "CORRECTLY - COMPILE-TIME ");
          END IF;

          IF NOT EQUAL (2,2) THEN    -- NEVER EXECUTED
               X := 0.0;
               Y := DN(IDENT_INT(3));
          END IF;

          IF X /= 16#0.FFFFFFFFFFFFFFFFFFFFFF#E88 OR
             Y /= 16#0.2#E-35 THEN
               FAILED("UNNORMALISED MODEL NUMBERS ARE NOT HANDLED " &
                      "CORRECTLY - RUN-TIME ");
          END IF;

     END;

     RESULT;
END C35708V;
