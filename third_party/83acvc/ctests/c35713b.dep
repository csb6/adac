-- C35713B.DEP

-- OBJECTIVE:
--     CHECK THAT PREDEFINED SHORT_FLOAT IS ITS OWN BASE TYPE.

-- APPLICABILITY CRITERIA:
--     THIS TEST IS APPLICABLE ONLY TO THOSE IMPLEMENTATIONS WHICH
--     SUPPORT SHORT_FLOAT.

--     IF "SHORT_FLOAT" IS NOT SUPPORTED, THEN THE DECLARATION OF
--     "CHECK_SHORT" MUST BE REJECTED.

-- HISTORY:
--     BCB 07/07/88  CREATED ORIGINAL TEST.

WITH REPORT; USE REPORT;

PROCEDURE C35713B IS

     CHECK_SHORT : SHORT_FLOAT;                        -- N/A => ERROR.

BEGIN
     TEST ("C35713B", "CHECK THAT PREDEFINED SHORT_FLOAT IS ITS OWN " &
                      "BASE TYPE");

     IF SHORT_FLOAT'DIGITS /= SHORT_FLOAT'BASE'DIGITS
          THEN FAILED ("SHORT_FLOAT'DIGITS DOES NOT EQUAL " &
                       "SHORT_FLOAT'BASE'DIGITS");
     END IF;

     IF SHORT_FLOAT'MANTISSA /= SHORT_FLOAT'BASE'MANTISSA
          THEN FAILED ("SHORT_FLOAT'MANTISSA DOES NOT EQUAL " &
                       "SHORT_FLOAT'BASE'MANTISSA");
     END IF;

     IF SHORT_FLOAT'SIZE /= SHORT_FLOAT'BASE'SIZE
          THEN FAILED ("SHORT_FLOAT'SIZE DOES NOT EQUAL " &
                       "SHORT_FLOAT'BASE'SIZE");
     END IF;

     IF SHORT_FLOAT'MACHINE_RADIX /= SHORT_FLOAT'BASE'MACHINE_RADIX
          THEN FAILED ("SHORT_FLOAT'MACHINE_RADIX DOES NOT EQUAL " &
                       "SHORT_FLOAT'BASE'MACHINE_RADIX");
     END IF;

     IF SHORT_FLOAT'MACHINE_EMAX /= SHORT_FLOAT'BASE'MACHINE_EMAX
          THEN FAILED ("SHORT_FLOAT'MACHINE_RADIX DOES NOT EQUAL " &
                       "SHORT_FLOAT'BASE'MACHINE_RADIX");
     END IF;

     IF SHORT_FLOAT'MACHINE_EMIN /= SHORT_FLOAT'BASE'MACHINE_EMIN
          THEN FAILED ("SHORT_FLOAT'MACHINE_EMIN DOES NOT EQUAL " &
                       "SHORT_FLOAT'BASE'MACHINE_EMIN");
     END IF;

     IF SHORT_FLOAT'MACHINE_ROUNDS /= SHORT_FLOAT'BASE'MACHINE_ROUNDS
          THEN FAILED ("SHORT_FLOAT'MACHINE_ROUNDS DOES NOT EQUAL " &
                       "SHORT_FLOAT'BASE'MACHINE_ROUNDS");
     END IF;

     IF SHORT_FLOAT'MACHINE_OVERFLOWS /=
          SHORT_FLOAT'BASE'MACHINE_OVERFLOWS THEN
          FAILED ("SHORT_FLOAT'MACHINE_OVERFLOWS DOES NOT EQUAL " &
                  "SHORT_FLOAT'BASE'MACHINE_OVERFLOWS");
     END IF;

     RESULT;
END C35713B;
