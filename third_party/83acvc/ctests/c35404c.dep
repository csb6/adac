-- C35404C.DEP

-- OBJECTIVE:
--     CHECK THAT PREDEFINED LONG_INTEGER IS ITS OWN BASE TYPE.

-- APPLICABILITY CRITERIA:
--     THIS TEST IS APPLICABLE ONLY TO THOSE IMPLEMENTATIONS WHICH
--     SUPPORT LONG_INTEGER.

--     IF "LONG_INTEGER" IS NOT SUPPORTED, THEN THE DECLARATION OF
--     "CHECK_LONG" MUST BE REJECTED.

-- HISTORY:
--     BCB 07/07/88  CREATED ORIGINAL TEST.

WITH REPORT; USE REPORT;

PROCEDURE C35404C IS

     CHECK_LONG : LONG_INTEGER;                        -- N/A => ERROR.

BEGIN
     TEST ("C35404C", "CHECK THAT PREDEFINED LONG_INTEGER IS ITS " &
                      "OWN BASE TYPE");

     IF LONG_INTEGER'FIRST /= LONG_INTEGER'BASE'FIRST
          THEN FAILED ("LONG_INTEGER'FIRST DOES NOT EQUAL " &
                       "LONG_INTEGER'BASE'FIRST");
     END IF;

     IF LONG_INTEGER'LAST /= LONG_INTEGER'BASE'LAST
          THEN FAILED ("LONG_INTEGER'LAST DOES NOT EQUAL " &
                       "LONG_INTEGER'BASE'LAST");
     END IF;

     IF LONG_INTEGER'SIZE /= LONG_INTEGER'BASE'SIZE
          THEN FAILED ("LONG_INTEGER'SIZE DOES NOT EQUAL " &
                       "LONG_INTEGER'BASE'SIZE");
     END IF;

     IF LONG_INTEGER'WIDTH /= LONG_INTEGER'BASE'WIDTH
          THEN FAILED ("LONG_INTEGER'WIDTH DOES NOT EQUAL " &
                       "LONG_INTEGER'BASE'WIDTH");
     END IF;

     RESULT;
END C35404C;
