-- C24113I.DEP

-- OBJECTIVE:
--     CHECK THAT DECIMAL VALUES OF 'LARGE AND 'SMALL ARE REPRESENTED
--     EXACTLY FOR DIGITS = 13.

-- APPLICABILITY CRITERIA:
--     THIS TEST IS APPLICABLE TO IMPLEMENTATIONS WHICH
--     SUPPORT DIGITS = 13 AND ALLOW SOURCE LINES WITH 134 CHARACTERS.
--
--     IF DIGITS = 13 IS NOT SUPPORTED, THEN THE DECLARATION OF TYPE
--     F MUST BE REJECTED.
--
--     IF SOURCE LINES OF 134 OR MORE CHARACTERS ARE NOT ALLOWED, THEN
--     THE LINE FOLLOWING THE DECLARATION OF MIN_SMALL MUST BE REJECTED.

-- HISTORY:
--     JBG 11/10/80  CREATED ORIGINAL TEST.
--     JBG 10/29/82
--     JBG 10/12/86  INSERTED CODE TO GUARANTEE VALUES ARE REPRESENTED
--                   AT RUN TIME; REMOVED -B FROM NAME.
--     BCB 12/28/87  MODIFIED HEADER.

WITH REPORT;
PROCEDURE C24113I IS
     USE REPORT;
     TYPE F IS DIGITS 13;                              -- N/A => ERROR.

     LARGE : F :=      -- DECIMAL VALUE OF 'LARGE ON NEXT LINE
1532495540865845302215381147026985871668987855852535808.0
;
     MIN_LARGE : F :=  -- NEGATIVE VALUE OF 'LARGE ON NEXT LINE
-1532495540865845302215381147026985871668987855852535808.0
;
     SMALL : F :=      -- DECIMAL VALUE OF 'SMALL ON NEXT LINE
0.3262652233999262263355147054628273777850582129034483273879318227734861622298743113611448063426934140807134099304676055908203125E-54
;
     MIN_SMALL : F :=  -- NEGATIVE VALUE OF 'SMALL ON NEXT LINE
-0.3262652233999262263355147054628273777850582129034483273879318227734861622298743113611448063426934140807134099304676055908203125E-54
;                      -- N/A => ERROR (PRECEDING LINE).

BEGIN TEST ("C24113I", "CHECK THAT DECIMAL VALUES OF 'LARGE, -'LARGE, "&
                       "'SMALL, AND -'SMALL ARE REPRESENTED EXACTLY");

     IF LARGE /= 16#0.FFFFFFFFFFF8#E45
     THEN
          FAILED ("'LARGE NOT EXACT - COMPILE-TIME");
     END IF;

     IF NOT EQUAL (2,2) THEN      -- NEVER EXECUTED
           LARGE := F (IDENT_INT(3));
     END IF;

     IF LARGE /= 16#0.FFFFFFFFFFF8#E45
     THEN
          FAILED ("'LARGE NOT EXACT - RUN-TIME");
     END IF;

     IF MIN_LARGE /= -16#0.FFFFFFFFFFF8#E45
     THEN
          FAILED ("-'LARGE NOT EXACT - COMPILE-TIME");
     END IF;

     IF NOT EQUAL (2,2) THEN      -- NEVER EXECUTED
           MIN_LARGE := F (IDENT_INT(3));
     END IF;

     IF MIN_LARGE /= -16#0.FFFFFFFFFFF8#E45
     THEN
          FAILED ("-'LARGE NOT EXACT - RUN-TIME");
     END IF;

     IF SMALL /= 16#0.8#E-45
     THEN
          FAILED ("SMALL NOT EXACT - COMPILE-TIME");
     END IF;

     IF NOT EQUAL (2,2) THEN      -- NEVER EXECUTED
          SMALL := F(IDENT_INT(3));
     END IF;

     IF SMALL /= 16#0.8#E-45
     THEN
          FAILED ("SMALL NOT EXACT - RUN-TIME");
     END IF;

     IF MIN_SMALL /= -16#0.8#E-45
     THEN
          FAILED ("-'SMALL NOT EXACT - COMPILE-TIME");
     END IF;

     IF NOT EQUAL (2,2) THEN      -- NEVER EXECUTED
          MIN_SMALL := F(IDENT_INT(3));
     END IF;

     IF MIN_SMALL /= -16#0.8#E-45
     THEN
          FAILED ("-'SMALL NOT EXACT - RUN-TIME");
     END IF;

     RESULT;

END C24113I;
