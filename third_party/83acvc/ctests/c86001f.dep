-- C86001F.DEP

-- OBJECTIVE:
--     CHECK THAT LIBRARY UNITS CAN HAVE THE FOLLOWING NAMES:
--       SYSTEM.

-- APPLICABILITY CRITERIA:
--     SOME IMPLEMENTATIONS HAVE "WITH SYSTEM" FOR TEXT_IO, WHICH
--     SHOULD CAUSE THE LINKER TO REQUIRE RECOMPILATION OF TEXT_IO AND
--     REPORT PACKAGE BODY.  IN THIS CASE, THE TEST IS INAPPLICABLE.

-- HISTORY:
--     JRK 02/24/83  CREATED ORIGINAL TEST.
--     JRK 01/09/84
--     JRK 06/05/84
--     BCB 01/04/88  MODIFIED HEADER.

WITH REPORT; USE REPORT;
PRAGMA ELABORATE (REPORT);
PACKAGE SYSTEM IS
     I3 : INTEGER := IDENT_INT (3);
END SYSTEM;


WITH SYSTEM; USE SYSTEM;
WITH REPORT; USE REPORT;

PROCEDURE C86001F IS

     I : INTEGER := 10;

BEGIN
     TEST ("C86001F", "CHECK THAT LIBRARY UNITS CAN HAVE CERTAIN " &
                      "SPECIAL NAMES");

     COMMENT ("MUST NOT EXECUTE IF TEXT_IO DEPENDS ON PACKAGE SYSTEM");

     IF I3 /= 3 THEN
          FAILED ("CAN'T ACCESS LIBRARY PACKAGE NAMED SYSTEM");
     END IF;

     RESULT;
END C86001F;
