-- CD1009C.DEP

-- OBJECTIVE:
--     CHECK THAT A 'SIZE CLAUSE MAY BE GIVEN IN THE VISIBLE
--     OR PRIVATE PART OF A PACKAGE FOR A FLOATING POINT TYPE DECLARED
--     IN THE VISIBLE PART OF THE SAME PACKAGE.

-- APPLICABILITY CRITERIA:
--     THIS TEST IS APPLICABLE TO IMPLEMENTATIONS WHICH SUPPORT
--     NON-DEFAULT 'SIZE CLAUSES FOR FLOATING POINT TYPES.

--     IF NON-DEFAULT 'SIZE CLAUSES FOR FLOATING POINT TYPES ARE NOT
--     SUPPORTED, THEN THE 'SIZE CLAUSE FOR CHECK_TYPE_1 MUST BE
--     REJECTED.

-- HISTORY:
--     PWB 03/25/89  MODIFIED METHOD OF COMPARING OBJECT SIZE AND TYPE
--                   SIZE.
--     VCL 10/07/87  CREATED ORIGINAL TEST.

WITH REPORT; USE REPORT;
PROCEDURE CD1009C IS
BEGIN
     TEST ("CD1009C", "A 'SIZE CLAUSE MAY BE GIVEN IN THE VISIBLE " &
                      "OR PRIVATE PART OF A PACKAGE FOR A " &
                      "FLOATING POINT TYPE DECLARED IN THE VISIBLE " &
                      "PART OF THE SAME PACKAGE");
     DECLARE
          PACKAGE PACK IS
               TYPE SPECIFIED IS DIGITS 5;

               SPECIFIED_SIZE : CONSTANT := SPECIFIED'SIZE/2;

               TYPE CHECK_TYPE_1 IS DIGITS 1;
               FOR CHECK_TYPE_1'SIZE
                              USE SPECIFIED_SIZE;    -- N/A => ERROR.

               TYPE CHECK_TYPE_2 IS DIGITS 1;
          PRIVATE
               FOR CHECK_TYPE_2'SIZE USE SPECIFIED_SIZE;
          END PACK;

          USE PACK;
          X : CHECK_TYPE_1 := -1.0;
          Y : CHECK_TYPE_2 := 1.0;
     BEGIN
          IF CHECK_TYPE_1'SIZE /= SPECIFIED_SIZE THEN
               FAILED ("CHECK_TYPE_1'SIZE IS INCORRECT");
          END IF;

          IF CHECK_TYPE_2'SIZE /= SPECIFIED_SIZE THEN
               FAILED ("CHECK_TYPE_2'SIZE IS INCORRECT");
          END IF;

          IF X'SIZE < SPECIFIED_SIZE THEN
               FAILED ("OBJECT SIZE IS TOO SMALL.  " &
                       "VALUE IS " & INTEGER'IMAGE (INTEGER(X)));
          END IF;

          IF Y'SIZE < SPECIFIED_SIZE THEN
               FAILED ("OBJECT SIZE IS TOO SMALL.  " &
                       "VALUE IS" & INTEGER'IMAGE (INTEGER(Y)));
          END IF;

     END;

     RESULT;
END CD1009C;
