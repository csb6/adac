-- C35708M.DEP

-- OBJECTIVE:
--     CHECK THAT UNNORMALIZED MODEL NUMBERS ARE CORRECT
--     FOR DIGITS = 17.

-- APPLICABILITY CRITERIA:
--     THIS TEST IS APPLICABLE TO IMPLEMENTATIONS WHICH
--     SUPPORT DIGITS = 17.
--
--     IF DIGITS = 17 IS NOT SUPPORTED, THEN THE DECLARATION OF
--     DN MUST BE REJECTED.

-- HISTORY:
--     BAW 09/80     CREATED ORIGINAL TEST.
--     JBG 10/29/82
--     JBG 10/12/86  ADD CODE TO ENSURE CHECKS ARE DONE AT RUN-TIME;
--                   REMOVE -B FROM TEST NAME.
--     BCB 01/14/88  MODIFIED HEADER.

WITH REPORT;
PROCEDURE C35708M IS

     USE REPORT;
     TYPE DN IS DIGITS 17;                             -- N/A => ERROR.

BEGIN

     DECLARE
          X : DN := 16#0.0000000FFFFFFFFFFFFFFC#E65;
          Y : DN := 16#0.00000000008#E-18;

     BEGIN TEST("C35708M","CHECK UNNORMALISED BASED NUMBERS, WHICH " &
                "ARE MODEL NUMBERS");

          IF X /= 16#0.FFFFFFFFFFFFFFC#E58 OR
             Y /= 16#0.8#E-28 THEN
               FAILED("UNNORMALISED MODEL NUMBERS ARE NOT HANDLED " &
                      "CORRECTLY - COMPILE-TIME ");
          END IF;

          IF NOT EQUAL (2,2) THEN    -- NEVER EXECUTED
               X := 0.0;
               Y := DN(IDENT_INT(3));
          END IF;

          IF X /= 16#0.FFFFFFFFFFFFFFC#E58 OR
             Y /= 16#0.8#E-28 THEN
               FAILED("UNNORMALISED MODEL NUMBERS ARE NOT HANDLED " &
                      "CORRECTLY - RUN-TIME ");
          END IF;

     END;

     RESULT;
END C35708M;
